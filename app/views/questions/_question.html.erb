<tr>
  <td>
    <%= text_with_index(question, question_counter + 1) %>
    <% unless question.text.include?("</pre>") %>
      <br><br>
    <% end %>
  </td>
  <td width="100px"></td>
  <td valign="top">
    <%= link_to 'Show', question_path(question) %>
    |
    <%= link_to 'Edit', edit_question_path(question) %>
    |
    <%= link_to 'Delete', question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
