<%= form_with url: sessions_path, local: true do |form| %>
  <%= flash_alert %>

  <p>
    <%= form.label :email, style: 'display: block' %>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :password, style: 'display: block' %>
    <%= form.password_field :password %>
  </p>

  <div class="actions">
    <%= form.submit 'Enter' %>
  </div>
<% end %>

<br>
