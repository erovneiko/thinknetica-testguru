<div class="row justify-content-center m-0">
  <div class="col col-md-2 mt-4">
    <h3><%= t('.sign_up') %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-3">
        <%= f.label :name, User.human_attribute_name(:name) %><br/>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field mt-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field mt-3" style="white-space: nowrap">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password_confirmation %><br />
        <div style="white-space: nowrap">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          <%= octicon 'check', height: 24, class: 'text-success hide' %>
          <%= octicon 'x', height: 24, class: 'text-danger hide' %>
        </div>
      </div>

      <div class="actions mt-4 mb-3">
        <%= f.submit t('.sign_up') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
