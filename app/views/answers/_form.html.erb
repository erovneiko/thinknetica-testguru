<%= form_with(model: [@question, @answer], local: true) do |form| %>
  <% render 'shared/errors', object: @answer %>

  <p>
    <%= form.label :text, 'Answer:' %><br>
    <%= form.text_area :text, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %><br>
    <%= form.check_box :correct %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
