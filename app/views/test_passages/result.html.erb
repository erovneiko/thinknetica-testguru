<%= render template: 'tests/show' %>
<hr>

<h1>Test completed!</h1>

<% if @result >= 85 %>

  <b style="color: green;">
    <%= "You passed with a score of %d%%" % @result %>
  </b>

<% else %>

  <b style="color: red;">
    <%= "You failed with a score of %d%%" % @result %>
  </b>

<% end %>

<br><br>

<%= link_to 'Back', root_path %>
