<div class="test-header">
  <%= render template: 'tests/show' %>
</div>

<div class="m-3">
  <h3><%= t('.completed') %></h3>

  <% if @test_passage.success? %>
    <p class="text-success">
      <%= t('.success', result: @test_passage.result) %>
    </p>
  <% else %>
    <p class="text-danger">
      <%= t('.failure', result: @test_passage.result) %>
    </p>
  <% end %>

  <% unless @test_passage.award_badges.empty? %>
    <h3><%= t('.got_awards', count: @test_passage.award_badges.count) %></h3>
    <%= render 'shared/awards', awards: @test_passage.award_badges %>
  <% end %>

  <p class="mt-3">
    <%= link_to t('helpers.links.back'), root_path %>
  </p>
</div>
