<div class="test-header">
  <%= render template: 'tests/show' %>
</div>

<div class="m-3">
  <h3><%= t('.header') %></h3>

  <p>
    <%= question_text(@answer.question) %>
  </p>

  <%= render 'form', model: [:admin, @answer] %>

  <%= link_to t('helpers.links.back'), admin_question_path(@answer.question), class: 'mr-3' %>
  <%= link_to t('helpers.links.delete'), admin_answer_path(@answer), class: 'mr-3',
              method: :delete, data: { confirm: t('helpers.links.confirm') } %>
</div>
