<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <table width="100%">
      <tr>
        <td style="padding: 0">
          <b style="font-size: large">
            <%= link_to 'TestGuru', root_path, style: 'text-decoration: none' %>
          </b>
        </td>
        <td style="padding: 0" class="nav user">
          <% if logged_in? %>
            Welcome, <b><%= current_user.name %></b> Guru!
          <% end %>
          <%= link_to 'Signup', signup_path, style: 'margin-left: 15px' %>
          |
          <%= link_to 'Login', login_path %>
          |
          <%= link_to 'Exit', exit_path %>
        </td>
      </tr>
    </table>
    <hr style="margin-bottom: 15px">
    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
